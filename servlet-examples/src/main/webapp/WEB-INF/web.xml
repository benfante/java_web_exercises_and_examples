<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>com.javacourse.servlet.examples.servlets.HelloServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteItemServlet</servlet-name>
		<display-name>DeleteItemServlet</display-name>
		<description></description>
		<servlet-class>com.javacourse.servlet.examples.servlets.DeleteItemServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ItemManagementServlet</servlet-name>
		<display-name>ItemManagementServlet</display-name>
		<description></description>
		<servlet-class>com.javacourse.servlet.examples.servlets.ItemManagementServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteItemServlet</servlet-name>
		<url-pattern>/item/delete</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ItemManagementServlet</servlet-name>
		<url-pattern>/item/add</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
</web-app>
